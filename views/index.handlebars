<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <div class="input-group mb-3">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            aria-describedby="button-addon2" value="{{keyword}}" />
          <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search">Search</i></button>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      {{#if restaurants}}
      <div class="row row-cols-sm-3">
        {{#each restaurants}}
        <div class="mb-3">
          <div class="text-secondary">
            <div class="card mb-3">
              <img class="card-img-top" src="{{this.image}}" alt="">
              <div class="card-body p-3">
                <h6 class="card-title mb-1">{{this.name}}</h6>

                <div class="restaurant-category mb-1">
                  <i class="fas fa-utensils pr-2"></i> {{this.category}}
                </div>
                <span class="badge rounded-pill bg-danger font-weight-normal">
                  {{this.rating}}
                  <i class="fas fa-star fa-xs yooo"></i>
                </span>

              </div>
            </div>
          </div>
          <div class="text-end">
            <a href="/restaurants/{{this._id}}" role='button' class="index-btn-detail btn"
              tabindex="-1">detail</a>
            <a href="/restaurants/{{this._id}}/edit" class="index-btn-edit btn" role='button'>edit</a>
            <form action="/restaurants/{{this._id}}?_method=DELETE" method="POST" style="display: inline;">
              <button type="submit" class="btn btn-danger" onclick="return confirm('Are u sure?');">delete</button>
            </form>
          </div>
        </div>
        {{/each}}
      </div>
      {{else}}
      <div class="d-flex flex-column align-items-center bg-secondary text-white pt-3">
        <p class="text-center">There is no data here, please add a new one at the upper right</p>
      </div>
      {{/if}}
    </div>
  </div>
</div>